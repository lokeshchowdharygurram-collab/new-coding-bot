<body>
  <h1>üë®‚Äçüíª Front-End Coding Bot</h1>
  <div id="chat"></div>
  <div id="inputArea">
    <input type="text" id="userInput" placeholder="Ask about HTML, CSS, JS..." />
    <button onclick="handleUserInput()">Send</button>
  </div>

  <script>
    const chat = document.getElementById('chat');

    function appendMessage(sender, text) {
      const msg = document.createElement('div');
      msg.className = sender;
      msg.innerHTML = `<strong>${sender === 'user' ? 'You' : 'Bot'}:</strong> ${text}`;
      chat.appendChild(msg);
      chat.scrollTop = chat.scrollHeight;
    }

    function handleUserInput() {
      const input = document.getElementById('userInput');
      const message = input.value.trim();
      if (!message) return;
      appendMessage('user', message);
      respondToUser(message.toLowerCase());
      input.value = '';
    }

    function respondToUser(message) {
      let response = '';

      if (message.includes('html')) {
        response = `
          HTML (HyperText Markup Language) is used to structure web content.
          Here's a sample:
          <code>&lt;!DOCTYPE html&gt;
&lt;html&gt;
  &lt;head&gt;&lt;title&gt;My Page&lt;/title&gt;&lt;/head&gt;
  &lt;body&gt;&lt;h1&gt;Hello World&lt;/h1&gt;&lt;/body&gt;
&lt;/html&gt;</code>`;
      } else if (message.includes('css')) {
        response = `
          CSS (Cascading Style Sheets) styles your HTML.
          Here's a sample:
          <code>body {
  background-color: #f0f0f0;
  font-family: Arial;
}</code>`;
      } else if (message.includes('javascript') || message.includes('js')) {
        response = `
          JavaScript adds interactivity.
          Example:
          <code>document.getElementById("btn").addEventListener("click", function() {
  alert("Hello from JS!");
});</code>`;
      } else {
        response = `I can help with HTML, CSS, and JavaScript. Try asking about any of them!`;
      }

      appendMessage('bot', response);
    }
  </script>
</body>
</html>
